@model MatriculasAPI.Models.PlanEstudioViewModel

@{
    ViewData["Title"] = "Planes de Estudio";

}

<h1>Crear</h1>

<h4>Crear un nuevo Plan de Estudio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombrePlanEstduio" class="control-label"></label>
                <input asp-for="NombrePlanEstduio" class="form-control" />
                <span asp-validation-for="NombrePlanEstduio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
