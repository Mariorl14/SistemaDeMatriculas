@model FrontEnd.Models.MatriculaViewModel

@{
    ViewData["Title"] = "Create";
  
}

<h1>Crear Matricula</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaMatricula" class="control-label"></label>
                <input asp-for="FechaMatricula" class="form-control" />
                <span asp-validation-for="FechaMatricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEstudianteFk" class="control-label"></label>
                <select asp-for="IdEstudianteFk" class ="form-control" asp-items="ViewBag.IdEstudianteFk"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdPlanEstudioFk" class="control-label"></label>
                <select asp-for="IdPlanEstudioFk" class ="form-control" asp-items="ViewBag.IdPlanEstudioFk"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdCursoFk" class="control-label"></label>
                <select asp-for="IdCursoFk" class ="form-control" asp-items="ViewBag.IdCursoFk"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
