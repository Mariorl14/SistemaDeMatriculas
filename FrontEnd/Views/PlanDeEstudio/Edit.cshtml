@model FrontEnd.Models.PlanDeEstudioViewModel

@{
    ViewData["Title"] = "Planes de Estudio";
}

<h1>Editar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(Model => Model.IdPlanEstudio)
            <div class="form-group">
                <label asp-for="NombrePlanEstduio" class="control-label"></label>
                <input asp-for="NombrePlanEstduio" class="form-control" />
                <span asp-validation-for="NombrePlanEstduio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
